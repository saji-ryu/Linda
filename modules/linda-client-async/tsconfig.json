{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "noImplicitAny": false,
    "sourceMap": true,
    "jsx": "react",
    "outDir": "./dist",
    "lib": ["es2015", "es2016", "es2017"],
    "typeRoots": ["./node_modules/@types", "../../typings"],
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "include": ["./src/**/*"],
  "exclude": ["./node_modules", "**/*.spec.ts", "./src/pages/*"]
}
